<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="sfynx_layout_enabledentity_ajax" path="/enabled">
        <default key="_controller">sfynx.auth.controller.layout:enabledajaxAction</default>
    </route>

    <route id="sfynx_layout_disablentity_ajax" path="/disable">
        <default key="_controller">sfynx.auth.controller.layout:disableajaxAction</default>
    </route>

    <route id="sfynx_layout_deletentity_ajax" path="/delete">
        <default key="_controller">sfynx.auth.controller.layout:deleteajaxAction</default>
    </route>

    <route id="sfynx_layout" path="/">
        <default key="_controller">sfynx.auth.controller.layout:indexAction</default>
    </route>

    <route id="sfynx_layout_show" path="/{id}/show">
        <default key="_controller">sfynx.auth.controller.layout:showAction</default>
    </route>

    <route id="sfynx_layout_new" path="/new">
        <default key="_controller">sfynx.auth.controller.layout:newAction</default>
    </route>

    <route id="sfynx_layout_create" path="/create" methods="POST">
        <default key="_controller">sfynx.auth.controller.layout:createAction</default>
    </route>

    <route id="sfynx_layout_edit" path="/{id}/edit">
        <default key="_controller">sfynx.auth.controller.layout:editAction</default>
    </route>

    <route id="sfynx_layout_update" path="/{id}/update" methods="POST">
        <default key="_controller">sfynx.auth.controller.layout:updateAction</default>
    </route>

    <route id="sfynx_layout_delete" path="/{id}/delete" methods="POST">
        <default key="_controller">sfynx.auth.controller.layout:deleteAction</default>
    </route>

</routes>
