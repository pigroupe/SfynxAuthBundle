{
  "name": "sfynx-project/auth-bundle",
  "type": "symfony-bundle",
  "description": "This Bundle handle authentication with role, permission and group dynamic system, and set handlers for login behavior, logout behavior and failure connection behavior. This add a layout theme system.",
  "keywords": ["authentication", "DDD"],
  "homepage": "http://pigroupe.github.io/cmf-sfynx/",
  "license": "LGPL-3.0-or-latter",
  "authors": [
    {
      "name": "Etienne de Longeaux",
      "email": "etienne.delongeaux@gmail.com"
    },
    {
      "name": "Sfynx Community",
      "homepage": "https://github.com/pigroupe/SfynxAuthBundle/contributors"
    }
  ],

  "require": {
    "symfony/framework-bundle": "~2.8|~3.0",
    "sfynx-project/tool-specification-bundle": "~2.8.3",
    "sfynx-project/tool-utils-bundle": "~2.8.1",
    "sfynx-project/template-presentation-bundle": "~2.8.1",
    "sfynx-project/core-bundle": "~2.9.0"
  },

  "require-dev": {
    "symfony/phpunit-bridge": "~2.7|~3.0",
    "phpunit/phpunit": "*"
  },

  "suggest": {
  },

  "conflict": {
  },

  "autoload": {
    "psr-0": { "Sfynx\\AuthBundle": "" }
  },

  "target-dir": "Sfynx/AuthBundle",

  "extra": {
    "branch-alias": {
      "dev-master": "2.x-dev"
    }
  }
}
